<resources>
    <declare-styleable name="FormField">
        <attr name="hint" format="string" />
        <attr name="inputType">
            <flag name="integer" value="2"/>
            <flag name="decimal" value="4"/>
            <flag name="currency"  value="8"/>
            <flag name="percentage" value="16" />
        </attr>
        <attr name="decimalPlaces" format="integer"/>
        <attr name="maxValue" format="float" />
        <attr name="minValue" format="float" />
    </declare-styleable>
</resources>