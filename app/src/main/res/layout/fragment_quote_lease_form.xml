<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:form="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <TextView
                style="@style/BaseTextAppearance.SingleLine.SectionHeader.QuoteForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_section_pricing"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="top">

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_negotiated_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_negotiated_price"
                                form:inputType="currency|decimal" />

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_tax_rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_tax_rate"
                                form:inputType="currency|decimal" />

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_term"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_lease_term"
                                form:inputType="currency|decimal" />

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_down_payment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_down_payment"
                                form:inputType="currency|decimal" />

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_trade_in_owed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_trade_in_owed"
                                form:inputType="currency|decimal" />

                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="top">

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_residual_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_residual_value"
                                form:inputType="currency"/>

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_money_factor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_money_factor"
                                form:inputType="currency"/>

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_incentives"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_dealer_incentives"
                                form:inputType="currency"/>

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_trade_in_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_trade_in_value"
                                form:inputType="currency"/>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                style="@style/BaseTextAppearance.SingleLine.SectionHeader.QuoteForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_section_fees"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="top">

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_title_fee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_title_fee"
                                form:inputType="currency|decimal" />

                            <io.levelsoftware.carculator.ui.FormField
                                android:id="@+id/form_field_acquisition_fee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                form:hint="@string/form_field_acquisition_fee"
                                form:inputType="currency|decimal" />

                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="top">

                        <io.levelsoftware.carculator.ui.FormField
                            android:id="@+id/form_field_doc_fee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            form:hint="@string/form_field_doc_fee"
                            form:inputType="currency"/>

                        <io.levelsoftware.carculator.ui.FormField
                            android:id="@+id/form_field_other_fee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp"
                            form:hint="@string/form_field_other_fee"
                            form:inputType="currency"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <io.levelsoftware.keyculator.Keyculator
        android:id="@+id/keyculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</FrameLayout>