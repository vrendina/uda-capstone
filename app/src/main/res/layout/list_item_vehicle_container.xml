<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_make_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:scaleType="fitCenter"
            android:tint="@color/primaryDark"
            tools:src="@drawable/make_bmw"
            android:contentDescription="@string/content_description_logo"/>

        <TextView
            android:id="@+id/text_view_make_name"
            style="@style/BaseTextAppearance.SingleLine.MakeListHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:paddingRight="16dp"
            tools:text="BMW"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="none"
            tools:listitem="@layout/list_item_vehicle"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </android.support.v7.widget.CardView>

</LinearLayout>